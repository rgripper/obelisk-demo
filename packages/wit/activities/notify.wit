// Notification Activity Interfaces
package obelisk:notify-activities@0.1.0;

interface types {
    record error {
        code: string,
        message: string,
    }
}

// Notify team via Slack/Teams/Email
world notify-team {
    use types.{error};

    // Main export: send notification (idempotent)
    export notify: func(message: string, channel: string, idempotency-key: string) -> result<_, error>;
}
